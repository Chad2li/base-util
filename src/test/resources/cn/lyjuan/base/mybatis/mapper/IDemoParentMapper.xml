<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lyjuan.base.mybatis.mapper.IDemoParentMapper">

    <select id="selectByName" resultType="cn.lyjuan.base.mybatis.dao.DemoDao">
        select *
        from demo
        where name = #{name}
        limit 1
    </select>


    <update id="updateAgeByName">
        update demo
        set age = #{age}
        where name = #{name}
    </update>
</mapper>